<?xml version="1.0"?>
<robot name="bike_robot">

  <link name="base_link"/>
  <link name="drive_link"/>
  <link name="flywheel_link"/>

  <joint name="drive_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drive_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="flywheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="flywheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>