<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bike_robot">
  <!-- Minimal links/joints -->
  <link name="base_link" />
  <joint name="joint0" type="continuous">
    <parent link="base_link" />
    <child link="drive_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="drive_link" />
  <joint name="joint1" type="continuous">
    <parent link="base_link" />
    <child link="flywheel_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="flywheel_link" />

  <!-- Use official odrive macro for ros2_control hardware wiring -->
  <xacro:include filename="$(find odrive_demo_description)/urdf/odrive.ros2_control.xacro" />

  <xacro:odrive_ros2_control
    name="BikeOdrive"
    joint0_name="joint0"
    joint1_name="joint1" />
</robot>
