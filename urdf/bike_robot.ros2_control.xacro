<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bike_robot">
  <!-- Minimal links/joints -->
  <link name="base_link" />
  <joint name="joint0" type="continuous">
    <parent link="base_link" />
    <child link="drive_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="drive_link" />
  <joint name="joint1" type="continuous">
    <parent link="base_link" />
    <child link="flywheel_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="flywheel_link" />

  <!-- ODrive hardware macro expected from odrive_ros2_control demo description -->
  <!-- Adjust to actual macro path if different -->
  <ros2_control name="BikeOdrive" type="system">
    <hardware>
      <!-- Per pluginlib list, correct plugin name is odrive_hardware_interface/ODriveHardwareInterface -->
      <plugin>odrive_hardware_interface/ODriveHardwareInterface</plugin>
      <!-- Optional: set parameters like serial_number or config path here if required by your setup -->
      <!-- <param name="serial_number">auto</param> -->
    </hardware>
    <joint name="joint0">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
    </joint>
    <joint name="joint1">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
    </joint>
  </ros2_control>
</robot>
