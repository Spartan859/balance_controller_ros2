<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bike_robot_mock">
  <link name="base_link" />
  <joint name="joint0" type="continuous">
    <parent link="base_link" />
    <child link="drive_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="drive_link" />
  <joint name="joint1" type="continuous">
    <parent link="base_link" />
    <child link="flywheel_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="flywheel_link" />

  <ros2_control name="MockBike" type="system">
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
      <param name="update_rate">500</param>
    </hardware>
    <joint name="joint0">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
    </joint>
    <joint name="joint1">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
    </joint>
  </ros2_control>
</robot>
